<div class="p-8">
  <div class="flex items-center justify-between">
    <div>
      <p class="text-xs uppercase font-medium text-gray-400">Resource</p>
      <h1 class="text-xl"><%= params[:resource] %></h1>
    </div>

    <%= link_to 'Add new', "", class: "inline-flex items-center justify-center py-2 px-6 rounded bg-blue-500 text-white text-sm font-medium" %>
  </div>
</div>
<div>
  <div class="px-4 sm:px-8 lg:px-8 mt-8 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <table class="min-w-full divide-y divide-gray-300">
          <thead>
            <tr class="divide-x divide-gray-200">
              <th><input type="checkbox" name="" id="" class="mx-4"></th>
              <th scope="col" class="px-4 py-3.5 text-left text-xs font-semibold text-gray-900 uppercase"></th>
              <% @resource_class.columns_hash.each do |key, value| %>
              <th scope="col" class="px-4 py-3.5 text-left text-xs font-semibold text-gray-900 uppercase"><%= key %></th>
              <% end %>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100 bg-white">
            <% @resources.each do |resource| %>
              <tr class="divide-x divide-gray-100">
                <td>
                  <input type="checkbox" name="" id="" class="mx-4">
                </td>
                <td>
                  <div class="flex space-x-2 mx-4">
                    <a href="<%= resource_path(resource, resource: params[:resource]) %>">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-500 hover:text-blue-500">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      </svg>
                    </a>
                    <a href="<%= edit_resource_path(resource, resource: params[:resource]) %>">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-500 hover:text-blue-500">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                      </svg>
                    </a>
                  </div>
                </td>
                <% @resource_class.columns_hash.each do |key, metadata| %>
                  <td class="whitespace-nowrap p-4 text-sm text-gray-500">
                    <%= raw(Oversee::FieldComponent.new(datatype: metadata.sql_type_metadata.type, value: resource.send(key)).call(view_context: nil)) %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>